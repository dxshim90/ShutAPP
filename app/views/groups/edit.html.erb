<div class="edit">

  <h1><%= @group.name %></h1>

  <%= form_for @group do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <ul>
      <%= f.collection_check_boxes :user_ids, @users, :id, :name do |b| %>
        <li>
          <%= b.label  %>
          <%= b.check_box %>
        </li>
      <% end %>
    </ul>
    <%= f.submit %>
  <% end %>

</div>