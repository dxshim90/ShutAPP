<div class="login-form">
  <% errors = flash[:errors] %>
  <% if errors %>
    <% errors.each do |err| %>
      <h1 class="error"><%= err %></h1>
    <% end %>
  <% end %>
  <%= form_for @user do |f| %>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %><br>

    <%= f.label :age %><br>
    <%= f.number_field :age %><br>

    <%= f.label :email %><br>
    <%= f.email_field :email %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit %>

  <% end %>
</div>